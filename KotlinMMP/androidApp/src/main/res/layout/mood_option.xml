<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.graphics.Color" />

        <variable
            name="mood"
            type="and.jemison.kotlinmmp.shared.Mood" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoodOptionFragment">

        <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/moodimage"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:contentDescription="@string/mood_image"
                android:gravity="top" />

            <TextView
                android:id="@+id/moodOption"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:fontFamily="@font/tahu"
                android:gravity="center_horizontal|center_vertical"
                android:text="@{mood.text}"
                android:textColor="@android:color/white"
                android:textSize="44sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>